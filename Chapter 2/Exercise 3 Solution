#include <iostream>//allows input/output
using namespace std;//delcares use of the standard namespace

int main() { //Intialises the main function
  int age; //intialises variables
  double height;

//rambly introcutory bit. Or as I like to call it - storytelling
  std::cout << "Welcome to BSC Computing Park! All the fun of a theme park on the budget of a compsci student!";

  std::cout << "\n\nIn order to ride, you have to be a certain height. Something that my classmates repeatedly tell me I don't meet.";

  std::cout << "\n\nYou also have to be a certain age because children suck.";

  std::cout << "\n\nPlease enter your height in meters "; //Prompts for input

  std::cin >> height; //assigns a value to the variable

  std::cout << "\n\nPlease enter your age "; //Prompts for input

  std::cin >> age; // reads and assigns a value to the variable

  if (height > 0.6 && age >= 5){ //conditional statement with two conditions that have to be met. Example of the boolean operator AND
    std::cout << "\nCongratulations! You can ride."; //Output to the console

    std::cout << "\nOh what's that? You want to know what you're riding?"; //Output to the console

    std::cout << "\n\nYou, my lucky friend, just got prime access to a three hour lecture into the delights and wonders that is binary.\nStrap in... please keep your arms and legs inside the vehicle.\nAnd please, keep the screaming to a minimum.";
  }else {
    std::cout << "Oh I'm sorry. You can't ride just yet."; //Output to the console
  }

  return 0; //Terminates the program
}
